<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="#73ecf2" />
            <gradient android:angle="-90" android:startColor="#6bc9ef" android:endColor="#5768e7"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="#72e4f1" />
            <solid android:color="#6bc9ef"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="#73ecf2" />
            <gradient android:angle="-90" android:startColor="#6bc9ef" android:endColor="#5768e7" />
        </shape>
    </item>
</selector>