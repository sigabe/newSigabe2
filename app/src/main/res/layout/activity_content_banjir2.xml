<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="113dp">
                <TextView
                    android:id="@+id/nom1"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:text="1."
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="7dp"
                    android:textSize="30sp"/>
                <ImageView
                    android:layout_toRightOf="@+id/nom1"
                    android:id="@+id/img1"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/ic_homes" />
                <TextView
                    android:layout_toRightOf="@id/img1"
                    android:layout_width="210dp"
                    android:layout_height="98dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="10dp"
                    android:text="Jika mengungsi, kembalilah ke rumah jika keadaan sudah benar-benar aman."
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:textColor="#000000"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_marginTop="125dp">
                <TextView
                    android:id="@+id/nom2"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:text="2."
                    android:textColor="#000000"
                    android:layout_marginLeft="7dp"
                    android:textSize="30sp"/>
                <ImageView
                    android:layout_toRightOf="@+id/nom2"
                    android:id="@+id/img2"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/ic_bahaya" />
                <TextView
                    android:layout_toRightOf="@id/img2"
                    android:layout_width="210dp"
                    android:layout_height="78dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="10dp"
                    android:text="Jangan langsung masuk ke dalam rumah, lihatlah situasi dengan saksama."
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:textColor="#000000"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="230dp">
                <TextView
                    android:id="@+id/nom3"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:text="3."
                    android:textColor="#000000"
                    android:layout_marginLeft="7dp"
                    android:textSize="30sp"/>
                <ImageView
                    android:layout_toRightOf="@+id/nom3"
                    android:id="@+id/img3"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/ic_warning" />
                <TextView
                    android:layout_toRightOf="@id/img3"
                    android:layout_width="210dp"
                    android:layout_height="98dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="10dp"
                    android:text="Periksalah lingkungan sekitar rumah kalau-kalau ada bahaya yang tersembunyi."
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:textColor="#000000"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginTop="340dp">
                <TextView
                    android:id="@+id/nom4"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:text="4."
                    android:textColor="#000000"
                    android:layout_marginLeft="7dp"
                    android:textSize="30sp"/>
                <ImageView
                    android:layout_toRightOf="@+id/nom4"
                    android:id="@+id/img4"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/ic_sepatu" />
                <TextView
                    android:layout_toRightOf="@id/img4"
                    android:layout_width="210dp"
                    android:layout_height="33dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="10dp"
                    android:text="Gunakan selalu alas kaki."
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:textColor="#000000"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="435dp">
                <TextView
                    android:id="@+id/nom5"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:text="5."
                    android:textColor="#000000"
                    android:layout_marginLeft="7dp"
                    android:textSize="30sp"/>
                <ImageView
                    android:layout_toRightOf="@+id/nom5"
                    android:id="@+id/img5"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/ic_cleaning" />
                <TextView
                    android:layout_toRightOf="@id/img5"
                    android:layout_width="210dp"
                    android:layout_height="90dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="10dp"
                    android:text="Mulailah membersihkan rumah dan lingkungan sekitar Anda."
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:textColor="#000000"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:layout_marginTop="545dp">
                <TextView
                    android:id="@+id/nom6"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:text="6."
                    android:textColor="#000000"
                    android:layout_marginLeft="7dp"
                    android:textSize="30sp"/>
                <ImageView
                    android:layout_toRightOf="@+id/nom6"
                    android:id="@+id/img6"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/ic_washing" />
                <TextView
                    android:layout_toRightOf="@id/img6"
                    android:layout_width="210dp"
                    android:layout_height="90dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="10dp"
                    android:text="Cucilah perlengkapan makan dan barang lainnya dengan sabun anti kuman."
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:textColor="#000000"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>