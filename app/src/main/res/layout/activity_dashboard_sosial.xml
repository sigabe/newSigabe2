<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/btnJatuh"
                android:layout_width="350dp"
                android:layout_height="110dp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp">
                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/ic_jatuh"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="6dp"/>
                <TextView
                    android:id="@+id/tw1"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="18dp"
                    android:text="JATUH DARI MOTOR"
                    android:layout_toRightOf="@+id/iv1"
                    android:layout_marginTop="5dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="235dp"
                    android:layout_height="65dp"
                    android:layout_below="@+id/tw1"
                    android:layout_toRightOf="@id/iv1"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="18dp"
                    android:textSize="15sp"
                    android:text="Peristiwa sosial yang sering terjadi akibat pengendara yang melamun saat berkendara."/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/btnTersesat"
                android:layout_width="350dp"
                android:layout_height="110dp"
                android:layout_marginTop="122dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp">
                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/ic_tersesat"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="6dp"/>
                <TextView
                    android:id="@+id/tw2"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="18dp"
                    android:text="TERSESAT"
                    android:layout_toRightOf="@+id/iv2"
                    android:layout_marginTop="5dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="235dp"
                    android:layout_height="65dp"
                    android:layout_below="@+id/tw2"
                    android:layout_toRightOf="@id/iv2"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="18dp"
                    android:textSize="15sp"
                    android:text="Peristiwa sosial dimana sesorang tidak tahu dimana lokasi dia saat ini."/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/btnBegal"
                android:layout_width="350dp"
                android:layout_height="110dp"
                android:layout_marginTop="237dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp">
                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/ic_begal"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="6dp"/>
                <TextView
                    android:id="@+id/tw3"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="18dp"
                    android:text="BEGAL"
                    android:layout_toRightOf="@+id/iv3"
                    android:layout_marginTop="5dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="235dp"
                    android:layout_height="65dp"
                    android:layout_below="@+id/tw3"
                    android:layout_toRightOf="@id/iv3"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="18dp"
                    android:textSize="15sp"
                    android:text="Peristiwa sosial yang sedang marak terjadi dan bisa mengancam nyawa seseorang."/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>