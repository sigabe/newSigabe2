<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Content.ContentBegal"
    android:background="#FFFFFF">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="117dp">
                <TextView
                    android:id="@+id/no1"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:text="1."
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="7dp"
                    android:textSize="30sp"/>
                <ImageView
                    android:layout_toRightOf="@+id/no1"
                    android:id="@+id/img1"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/key" />
                <TextView
                    android:layout_toRightOf="@id/img1"
                    android:layout_width="210dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="10dp"
                    android:text="Dimana pun kamu parkir, selalu usahakan dan ingat untuk mengunci ganda motor kamu."
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:textColor="#000000"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/no2"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:text="2."
                    android:textColor="#000000"
                    android:layout_marginLeft="7dp"
                    android:textSize="30sp"/>
                <ImageView
                    android:layout_toRightOf="@+id/no2"
                    android:id="@+id/img2"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/ic_motor" />
                <TextView
                    android:layout_toRightOf="@id/img2"
                    android:layout_width="210dp"
                    android:layout_height="69dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="10dp"
                    android:text="Hindari mengendarai motor mewah / mahal saat malam hari."
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:textColor="#000000"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/no3"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:text="3."
                    android:textColor="#000000"
                    android:layout_marginLeft="7dp"
                    android:textSize="30sp"/>
                <ImageView
                    android:layout_toRightOf="@id/no3"
                    android:id="@+id/img3"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/partner" />
                <TextView
                    android:layout_toRightOf="@id/img3"
                    android:layout_width="210dp"
                    android:layout_height="90dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="10dp"
                    android:text="Jika memang harus pergi keluar malam karena ada urusan penting, jangan pergi sendirian."
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:textColor="#000000"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/no4"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:text="4."
                    android:textColor="#000000"
                    android:layout_marginLeft="7dp"
                    android:textSize="30sp"/>
                <ImageView
                    android:layout_toRightOf="@+id/no4"
                    android:id="@+id/img5"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/biker" />
                <TextView
                    android:layout_toRightOf="@id/img5"
                    android:layout_width="210dp"
                    android:layout_height="95dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="10dp"
                    android:text="Jika bepergian jauh, bekali diri anda dengan berbagai atribut  keselamatan berkendara."
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:textColor="#000000"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="300dp">
                <TextView
                    android:id="@+id/no5"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:text="5."
                    android:textColor="#000000"
                    android:layout_marginLeft="7dp"
                    android:textSize="30sp"/>
                <ImageView
                    android:layout_toRightOf="@+id/no5"
                    android:id="@+id/img6"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/route" />
                <TextView
                    android:layout_toRightOf="@id/img6"
                    android:layout_width="210dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="10dp"
                    android:text="Jika ingin bepergian ke suatu tempat, kenali jalan yang akan kamu lalui."
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:textColor="#000000"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>