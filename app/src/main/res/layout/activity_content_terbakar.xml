<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <TextView
                    android:id="@+id/nom1"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:text="1."
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="7dp"
                    android:textSize="30sp"/>
                <ImageView
                    android:layout_toRightOf="@+id/nom1"
                    android:id="@+id/img1"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/fire" />
                <TextView
                    android:layout_toRightOf="@id/img1"
                    android:layout_width="210dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="10dp"
                    android:text="Jangan panik, cari sumber api, lakukan pemadaman jika masih bisa dilakukan. "
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:textColor="#000000"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/nom2"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:text="2."
                    android:textColor="#000000"
                    android:layout_marginLeft="7dp"
                    android:textSize="30sp"/>
                <ImageView
                    android:layout_toRightOf="@+id/nom2"
                    android:id="@+id/img2"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/evakuasi" />
                <TextView
                    android:layout_toRightOf="@id/img2"
                    android:layout_width="210dp"
                    android:layout_height="92dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="10dp"
                    android:text="Evakuasi dan selamatkan semua orang atau anggota keluarga yang ada."
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:textColor="#000000"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/nom3"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:text="3."
                    android:textColor="#000000"
                    android:layout_marginLeft="7dp"
                    android:textSize="30sp"/>
                <ImageView
                    android:layout_toRightOf="@+id/nom3"
                    android:id="@+id/img3"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/ic_listrik" />
                <TextView
                    android:layout_toRightOf="@id/img3"
                    android:layout_width="210dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="10dp"
                    android:text="Matikan listrik dan kompor."
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:textColor="#000000"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/nom4"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:text="4."
                    android:textColor="#000000"
                    android:layout_marginLeft="7dp"
                    android:textSize="30sp"/>
                <ImageView
                    android:layout_toRightOf="@+id/nom4"
                    android:id="@+id/img4"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/blanket" />
                <TextView
                    android:layout_toRightOf="@id/img4"
                    android:layout_width="210dp"
                    android:layout_height="93dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="10dp"
                    android:text="Jika jalan keluar harus melewati api, tutup kepala dan badan dengan kain basah."
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:textColor="#000000"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/nom5"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:text="5."
                    android:textColor="#000000"
                    android:layout_marginLeft="7dp"
                    android:textSize="30sp"/>
                <ImageView
                    android:layout_toRightOf="@+id/nom5"
                    android:id="@+id/img5"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/gloves" />
                <TextView
                    android:layout_toRightOf="@id/img5"
                    android:layout_width="210dp"
                    android:layout_height="75dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="10dp"
                    android:text="Balut tangan saat memegang pintu atau keluar lewat jendela."
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:textColor="#000000"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="107dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="300dp">
                <TextView
                    android:id="@+id/nom6"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:text="6."
                    android:textColor="#000000"
                    android:layout_marginLeft="7dp"
                    android:textSize="30sp"/>
                <ImageView
                    android:layout_toRightOf="@+id/nom6"
                    android:id="@+id/img6"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/ic_hubungi" />
                <TextView
                    android:layout_toRightOf="@id/img6"
                    android:layout_width="210dp"
                    android:layout_height="93dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="10dp"
                    android:text="Setelah keluar rumah, segera minta bantuan atau telepon petugas pemadam kebakaran."
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:textColor="#000000"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>